<div class="fields">

  <div class="control-group">
  <div class="control-label">
  <%= f.label :text, "Question" %>
  </div>
  <div class="controls">
  <%= f.text_area :text, :rows => 2 %>
</div>
</div>
<div class="control-group">
  <div class="control-label">
  <%= f.hidden_field :_destroy %>
  </div>

  <div class="controls">
    <%= link_to_remove_fields "Remove Question", f %>
</div>
</div>

<%= f.fields_for :choices do |builder| %>
    <%= render :partial => 'choice_fields',:locals => { :f=>builder}%>
<% end %>
  <p><%= link_to_add_fields "Add Choice", f, :choices %></p>
</div>